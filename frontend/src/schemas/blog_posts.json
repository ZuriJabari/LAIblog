{
  "Main": {
    "title": {
      "type": "Text",
      "config": {
        "label": "Title",
        "placeholder": "Enter the blog title"
      }
    },
    "author": {
      "type": "Text",
      "config": {
        "label": "Author",
        "placeholder": "Author's name"
      }
    },
    "author_picture": {
      "type": "Image",
      "config": {
        "label": "Author Picture",
        "constraint": {},
        "thumbnails": []
      }
    },
    "publish_date": {
      "type": "Date",
      "config": {
        "label": "Publish Date"
      }
    },
    "excerpt": {
      "type": "Text",
      "config": {
        "label": "Excerpt",
        "placeholder": "A brief summary of the blog"
      }
    },
    "featured_image": {
      "type": "Image",
      "config": {
        "label": "Featured Image",
        "constraint": {},
        "thumbnails": []
      }
    },
    "introduction": {
      "type": "StructuredText",
      "config": {
        "label": "Introduction",
        "placeholder": "Write an engaging introduction",
        "multi": "paragraph"
      }
    },
    "content": {
      "type": "StructuredText",
      "config": {
        "label": "Content",
        "placeholder": "Main content of the blog post",
        "multi": "heading1,heading2,paragraph,preformatted,list-item,o-list-item,image,strong,em,hyperlink"
      }
    },
    "quotes": {
      "type": "Group",
      "config": {
        "fields": {
          "quote_text": {
            "type": "Text",
            "config": {
              "label": "Quote Text",
              "placeholder": "Enter the quote text"
            }
          },
          "quote_author": {
            "type": "Text",
            "config": {
              "label": "Quote Author",
              "placeholder": "Enter the quote author"
            }
          }
        },
        "label": "Quotes"
      }
    },
    "multimedia": {
      "type": "Group",
      "config": {
        "fields": {
          "media_type": {
            "type": "Select",
            "config": {
              "label": "Media Type",
              "options": [
                "image",
                "video",
                "audio"
              ]
            }
          },
          "media_file": {
            "type": "Link",
            "config": {
              "label": "Media File",
              "select": "media"
            }
          },
          "caption": {
            "type": "Text",
            "config": {
              "label": "Caption",
              "placeholder": "Add a caption for the media"
            }
          }
        },
        "label": "Multimedia"
      }
    },
    "categories": {
      "type": "Group",
      "config": {
        "fields": {
          "category": {
            "type": "Text",
            "config": {
              "label": "Category",
              "placeholder": "Enter the category name"
            }
          }
        },
        "label": "Categories"
      }
    },
    "tags": {
      "type": "Group",
      "config": {
        "fields": {
          "tag": {
            "type": "Text",
            "config": {
              "label": "Tag",
              "placeholder": "Enter the tag name"
            }
          }
        },
        "label": "Tags"
      }
    },
    "related_posts": {
      "type": "Link",
      "config": {
        "label": "Related Posts",
        "select": "document",
        "customtypes": [
          "blog_post"
        ]
      }
    },
    "seo_metadata": {
      "type": "Group",
      "config": {
        "fields": {
          "meta_title": {
            "type": "Text",
            "config": {
              "label": "Meta Title",
              "placeholder": "SEO-friendly title"
            }
          },
          "meta_description": {
            "type": "Text",
            "config": {
              "label": "Meta Description",
              "placeholder": "SEO-friendly description"
            }
          },
          "meta_keywords": {
            "type": "Text",
            "config": {
              "label": "Meta Keywords",
              "placeholder": "Comma-separated keywords"
            }
          }
        },
        "label": "SEO Metadata"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "UID"
      }
    }
  }
}